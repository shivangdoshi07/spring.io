package com.shivang.secretsharing.pojo;

import java.util.ArrayList;

public class User {
	String name;
	ArrayList<Secret> ownSecrets = new ArrayList<Secret>();
	ArrayList<Secret> receivedSecrets = new ArrayList<Secret>();
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public ArrayList<Secret> getOwnSecrets() {
		return ownSecrets;
	}
	public ArrayList<Secret> getReceivedSecrets() {
		return receivedSecrets;
	}
	
	public boolean checkOwnSecrets(Secret id){
		if(ownSecrets.contains(id))
			return true;
		else
			return false;
	}
}
